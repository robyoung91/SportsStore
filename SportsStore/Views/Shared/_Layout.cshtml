<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/twitter-bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet"
          asp-href-include="/lib/font-awesome/css/*.css" />
    <title>SportsStore</title>
</head>
<body>
    <div class="navbar navbar-dark bg-dark" role="navigation">
        <a class="col navbar-brand" href="#">SPORTS STORE</a>
        <div class="col-2 text-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-1">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-11">
            @RenderBody()
        </div>
    </div>
</body>
</html>
